#!/usr/bin/env python

import sys
import os
sys.path.append(os.path.dirname(os.path.realpath(__file__)))
import argparse
import hadmin

help_string = """Usage: hadmin <command> <command options>

Commands:
    - useradd
    - queueadd
    - userdel
    - queuedel"""

def run():
    if (len(sys.argv) <= 1 or sys.argv[1] == "-h"):
        print(help_string)
        return 0
    command = sys.argv[1]
    sysargs = sys.argv[2:]
    return getattr(hadmin, command)(sysargs)
    return 1

if __name__ == "__main__":
    sys.exit(run())
